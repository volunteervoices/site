<div class="min-h-screen bg-[var(--color-slate-1)] text-[var(--color-slate-12)] font-sans">
    <!-- Navbar with sticky positioning -->
    <header class="sticky top-0 z-50 bg-[var(--color-slate-2)] shadow-md">
      <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex-shrink-0">
          <a href="#" class="text-xl font-bold text-[var(--color-slate-11)] hover:text-[var(--color-primary-9)] transition-colors">
            Volunteer Voices
          </a>
        </div>
        <div class="hidden md:flex space-x-8">
          <a href="#about" class="text-[var(--color-slate-11)] hover:text-[var(--color-primary-9)] transition-colors">About</a>
          <a href="#languages" class="text-[var(--color-slate-11)] hover:text-[var(--color-primary-9)] transition-colors">Languages</a>
          <a href="#volunteer" class="text-[var(--color-slate-11)] hover:text-[var(--color-primary-9)] transition-colors">Volunteer</a>
          <a href="#contact" class="text-[var(--color-slate-11)] hover:text-[var(--color-primary-9)] transition-colors">Contact</a>
        </div>
        <!-- Mobile menu button (hidden on larger screens) -->
        <button class="md:hidden text-[var(--color-slate-11)]">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
    </header>
    
